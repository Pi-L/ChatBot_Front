.container {
  max-width: 130rem;
  padding-left: calc(1.6rem * var(--pd__fact));
  padding-right: calc(1.6rem * var(--pd__fact));
  margin: 0 auto;
  width: 100%;
}

.smallContainer {
  max-width: 84rem;
  padding-left: calc(1.6rem * var(--pd__fact));
  padding-right: calc(1.6rem * var(--pd__fact));
  margin: 0 auto;
  width: 100%;
}

.imgCoverWidth {
  width: 100%;
  object-fit: cover;
}

.imgCoverHeight {
  height: 100%;
  object-fit: cover;
}

.more {
  display: flex;
  align-items: center;
  justify-content: center;
  height: calc(4.8rem * var(--pd__factAlt));
  background-color: #fd7e37;
  color: white;
  font-weight: 600;
  font-style: normal;
  font-family: "Montserrat", sans-serif;
  font-size: 2rem;
}
@media only screen and (min-width: 48em) {
  .more {
    font-size: 2.4rem;
  }
}
.more span {
  margin-left: 1rem;
}
.more:hover span, .more:active span {
  animation: arrowMove 0.4s ease-in-out infinite alternate;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.w100 {
  width: 100%;
}

@keyframes arrowMove {
  100% {
    transform: translateX(1rem);
  }
}
@keyframes elAppear {
  0% {
    transform: translateX(-100vw);
  }
  100% {
    transform: translateX(0);
  }
}
body {
  display: flex;
  flex-flow: column nowrap;
}
body > * {
  flex-grow: 1;
}

body {
