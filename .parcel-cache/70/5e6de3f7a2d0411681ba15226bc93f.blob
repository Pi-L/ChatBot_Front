body .speakBubble_container.box-triangle {
  color: #f7f1e3;
  background-color: #227093;
  font-size: 29px;
  border: 3px solid black;
  border-radius: 3px;
  width: max-content;
  padding: 5px 10px;
}
body .speakBubble_container.box-triangle.bot {
  position: relative;
  margin-right: auto;
}
body .speakBubble_container.box-triangle.bot::after {
  content: "";
  position: absolute;
  height: 0;
  width: 0;
  margin: 0;
  border: solid transparent;
  left: 85%;
  top: 100%;
  border-top-color: #227093;
  border-width: 20px;
  transform: translate(-50%, 0);
}
body .speakBubble_container.box-triangle.person {
  position: relative;
  margin-left: auto;
}
body .speakBubble_container.box-triangle.person::after {
  content: "";
  position: absolute;
  height: 0;
  width: 0;
  margin: 0;
  border: solid transparent;
  left: 25%;
  top: 100%;
  border-top-color: #227093;
  border-width: 20px;
  transform: translate(-50%, 0);
}