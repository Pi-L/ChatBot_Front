{
  "name": "Chatrabia",
  "version": "1.0.0",
  "description": "a bot that will change the world",
  "main": "main.js",
  "scripts": {
    "sassBuild": "sass --no-source-map --style=compressed src/styles/main.scss build/styles/main.css",
    "parcelBuild": "parcel build src/scripts/main.js -d build/scripts",
    "copyFile": "cp -f ./src/index.html ./build/index.html && cp -fr ./src/fonts ./build/fonts",
    "browserSync": "browser-sync start -f='build/**/*' -w",
    "watch": "npm-watch",
    "build": "npm run sassBuild && npm run copyFile && npm run parcelBuild",
    "start": "npm run watch"
  },
  "author": "pil",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "npm-watch": "^0.7.0",
    "parcel-bundler": "^1.3.1",
    "poetic": "^1.6.0",
    "sass": "^1.32.8"
  },
  "watch": {
    "copyFile": {
      "patterns": [
        "./src"
      ],
      "extensions": "html"
    },
    "sassBuild": {
      "patterns": [
        "./src/styles"
      ],
      "extensions": "scss"
    },
    "parcelBuild": {
      "patterns": [
        "./src/scripts"
      ],
      "extensions": "js"
    }
  }
}
