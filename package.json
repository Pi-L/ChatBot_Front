{
	"name": "Chatrabia",
	"version": "1.0.0",
	"description": "a bot that will change the world",
	"main": "index.js",
	"scripts": {
		"sassBuild": "sass --no-source-map --style=compressed ./src/styles/main.scss ./build/styles/main.css && npm run buildPrefix",
		"buildPrefix": "postcss --no-map ./build/styles/main.css -u autoprefixer -o ./build/styles/main.css",
		"parcelBuild": "parcel build --no-source-maps ./src/scripts/main.ts --out-dir ./build/scripts",
		"browserSync": "browser-sync -f='build/**/*' -w",
		"watch": "npm-watch",
		"build": "npm run sassBuild && npm run parcelBuild "
	},
	"author": "pil",
	"license": "ISC",
	"devDependencies": {
		"autoprefixer": "^10.2.4",
		"browser-sync": "^2.26.14",
		"chokidar": "^3.5.1",
		"core-js": "^3.9.1",
		"dot-prop": "^6.0.1",
		"npm-watch": "^0.7.0",
		"parcel-bundler": "^1.3.1",
		"poetic": "^1.6.0",
		"postcss-cli": "^8.3.1",
		"sass": "^1.32.8"
	},
	"watch": {
		"sassBuild": {
			"patterns": [
				"./src/styles"
			],
			"extensions": "scss"
		},
		"parcelBuild": {
			"patterns": [
				"./src/scripts"
			],
			"extensions": "js"
		}
	},
	"browserslist": [
		"last 1 version",
		"last 5 Firefox versions",
		"last 5 Chrome versions",
		"last 5 iOS versions",
		"not dead",
		"not IE 11 and > 0.5%"
	]
}
